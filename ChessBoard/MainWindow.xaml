            <ListBoxItem Name="Bishop" FontSize="28" BorderBrush="Black">Bishop</ListBoxItem>
            <ListBoxItem Name="Rook" FontSize="28" BorderBrush="Black">Rook</ListBoxItem>
            <ListBoxItem Name="Knight" FontSize="28" BorderBrush="Black">Knight</ListBoxItem>
